<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewHolder"
        android:layout_width="370dp"
        android:layout_height="325dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/idLat"
        android:layout_width="154dp"
        android:layout_height="38dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHolder" />

    <TextView
        android:id="@+id/idLng"
        android:layout_width="154dp"
        android:layout_height="38dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLat" />

    <Button
        android:id="@+id/cameraBt"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="39dp"
        android:text="Iniciar CÃ¢mera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLng" />

    <Button
        android:id="@+id/permitirGps"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:text="Permitir GPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLng" />
</androidx.constraintlayout.widget.ConstraintLayout>